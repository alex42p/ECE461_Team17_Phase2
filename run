#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
cd "$SCRIPT_DIR"

# Auto-activate virtualenv if present
if [ -f .venv/bin/activate ]; then
  # shellcheck disable=SC1091
  source .venv/bin/activate
fi

# Ensure required env vars exist to avoid startup KeyErrors
if [ -z "${GEN_AI_STUDIO_API_KEY:-}" ]; then export GEN_AI_STUDIO_API_KEY=""; fi
if [ -z "${HF_TOKEN:-}" ]; then export HF_TOKEN=""; fi
if [ -z "${GITHUB_TOKEN:-}" ]; then export GITHUB_TOKEN=""; fi

# Forward all arguments to the Python entrypoint
exec python3 src/cli.py "$@"